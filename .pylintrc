[MASTER]
# Ignorer les docstrings pour se concentrer sur le code et le typage
disable=C0114,C0115,C0116

[FORMAT]
# Limite le nombre de lignes par fichier (module)
max-module-lines=400

# Longueur max d'une aligne pour garder un code lisible
max-line-length=300


[IMPORTS]
# Détection des imports inutilisés activée par défaut
# Pylint signalera un warning si un import n'est jamais utilisé

[MESSAGES CONTROL]
disable=line-too-long,too-many-lines,import-error
extension-pkg-allow-list=google.generativeai,dotenv,requests

[DESIGN]
max-nested-blocks=8
max-branches=20
max-locals=25
